<h2> Welcome <%= current_user.name %>!</h2>
<h4> Customize your experience - <%= link_to "Add Interests", "#{current_user.id}/tagging" %></h4>

<h3>Museums for you:</h3>
<% if current_user.tags == [] %>
	<div class="row masonry-row">
		<% @all_posts.shuffle.each do |post| %>
		<%= render "museums/museum_row", post: post, ticket: @ticket  %>
		<% end %>
	</div>
<% else %>
	<div class="row masonry-row">
		<% @posts.shuffle.each do |post| %>
		<%= render "museums/museum_row", post: post, ticket: @ticket  %>
		<% end %>
	</div>
<% end %>
