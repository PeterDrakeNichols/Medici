<div class="container-sign-in">
  <div class="panel panel-sign-in">
    <div class="panel-heading">
      <div class= "header-wrapper">
        <p>Edit <%= resource_name.to_s.humanize %></p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.text_field :name, placeholder:"username", autocomplete: "off", class:"input-field" %>
        <%= f.email_field :email, placeholder:"e mail", autofocus: true, class:"input-field"%>
        <%= f.email_field :email, placeholder:"confirm", autofocus: true, class:"input-field"%>
        <%= f.password_field :password, placeholder:"password", autocomplete: "off", class:"input-field" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password_confirmation, placeholder:"confirm", autocomplete: "off", class:"input-field" %>
        <%= f.label "Add a profile picture" %>
        <%= f.file_field :avatar%>
        <%= f.submit "Sign up", class:"input-button"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
